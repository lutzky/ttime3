{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "outDir": "./built",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "target": "es2018",
    "lib": ["es2018", "dom"]
  },
  "include": ["./src/**/*", "./spec/**/*"],
  "exclude": ["node_modules"]
}
